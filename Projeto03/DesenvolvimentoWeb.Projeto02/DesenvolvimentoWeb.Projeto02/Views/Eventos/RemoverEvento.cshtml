@model DesenvolvimentoWeb.Projeto02.Models.Evento

@{
    ViewData["Title"] = "Remover Evento";
}

<h2>Remover Evento</h2>

<h3 class="text-danger">Tem certeza que deseja remover este evento?</h3>
<div>
    <div class="text-center">
        <img src="@Url.Action("BuscarFoto", "Eventos", new { id = Model.Id })" />
    </div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="RemoverEvento">
        <input type="submit" value="Sim, remover" 
               class="btn btn-danger" /> |
        <a asp-action="ListarEventos" class="btn btn-default">
            Não, voltar para a lista
        </a>
    </form>
</div>
